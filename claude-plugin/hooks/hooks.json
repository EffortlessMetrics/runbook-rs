{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks SessionStart"
          }
        ]
      }
    ],

    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks UserPromptSubmit"
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks PreToolUse Bash --deny-destructive-bash"
          }
        ]
      }
    ],

    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks PermissionRequest"
          }
        ]
      }
    ],

    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks Notification permission_prompt"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks Notification idle_prompt"
          }
        ]
      },
      {
        "matcher": "elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks Notification elicitation_dialog"
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks PostToolUse",
            "async": true
          }
        ]
      }
    ],

    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks PostToolUseFailure",
            "async": true
          }
        ]
      }
    ],

    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks TaskCompleted"
          }
        ]
      }
    ],

    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks Stop"
          }
        ]
      }
    ],

    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "runbook-hooks SessionEnd"
          }
        ]
      }
    ]
  }
}
